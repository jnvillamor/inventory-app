{
  "$schema": "http://json.schemastore.org/prettierrc",
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 160,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "none",
  "importOrder": [
    "^react$",
    "^next$",
    "^[a-z]",
    "^@/public/(.*)$",
    "^@/components/(.*)$",
    "^@/models/(.*)$",
    "@/lib/(.*)$",
    "^@/app/(.*)$",
    "^[./]|[.](css|scss)$",
    ".*"
  ]
}
